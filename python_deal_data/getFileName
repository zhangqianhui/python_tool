import os
glass_path = r'D:\zhangjichao\forMultithree\test\glasses'
no_path = r'D:\zhangjichao\forMultithree\test\no'
sun_path = r'D:\zhangjichao\forMultithree\test\sun'

files = os.listdir(glass_path)
output= open('D:\\test_filename.txt' , 'w')
for f in files:
    output.write(f+'\n')
output.close()

