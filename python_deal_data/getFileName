output= open('D:\\test_filename2.txt' , 'w')
for f in files:
    output.write(f+'\n')
output.close()

files = os.listdir(sun_path)
output= open('D:\\test_filename3.txt' , 'w')
for f in files:
    output.write(f+'\n')
